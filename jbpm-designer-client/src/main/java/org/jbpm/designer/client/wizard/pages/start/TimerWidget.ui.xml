<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.jbpm.designer.client.resources.i18n.DesignerEditorConstants"/>

    <b:Form type="HORIZONTAL">
        <b:FieldSet>
            <b:FormLabel for="timerType" text="Timer type" addStyleNames="col-lg-3"/>
            <gwt:VerticalPanel addStyleNames="col-lg-8">
                <gwt:RadioButton ui:field="delay" name="timerType" value="true" enabled="true" text="Start with delay" />
                <gwt:RadioButton ui:field="date" name="timerType" value="false" enabled="true" text="Start on date" />
                <gwt:RadioButton ui:field="cycle" name="timerType" value="false" enabled="true" text="Repeat in cycle" />
            </gwt:VerticalPanel>
        </b:FieldSet>

        <b:FieldSet>
            <b:FormLabel ui:field="timerValueLabel" for="timerValue" text="Timer value" showRequiredIndicator="true" addStyleNames="col-lg-3"/>
            <gwt:VerticalPanel addStyleNames="col-lg-8">
                <b:TextBox ui:field="timerValue"/>
                <b:HelpBlock ui:field="timerHelp"/>
            </gwt:VerticalPanel>
        </b:FieldSet>
    </b:Form>

</ui:UiBinder>
