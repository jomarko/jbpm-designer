<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.jbpm.designer.client.resources.i18n.DesignerEditorConstants"/>


    <gwt:VerticalPanel ui:field="container" width="100%">
        <b:Label text="{i18n.generalProcessInfo}"/>
        <gwt:HTML>
            <hr/>
        </gwt:HTML>
        <b:Form type="HORIZONTAL">
            <b:FormGroup ui:field="processNameContainer">
                <b:FormLabel ui:field="processNameLabel" for="processName" addStyleNames="col-lg-2" text="{i18n.processName}" showRequiredIndicator="true"/>
                <gwt:FlowPanel addStyleNames="col-lg-9">
                    <b:TextBox ui:field="processName"/>
                    <b:HelpBlock ui:field="processNameHelp" text="{i18n.processNameHelp}" visible="false"/>
                </gwt:FlowPanel>
            </b:FormGroup>
            <b:FormGroup ui:field="processDescriptionContainer">
                <b:FormLabel for="processDescription" addStyleNames="col-lg-2" text="{i18n.processDescription}" />
                <gwt:FlowPanel addStyleNames="col-lg-9">
                    <b:TextArea ui:field="processDescription"/>
                </gwt:FlowPanel>
            </b:FormGroup>
        </b:Form>
    </gwt:VerticalPanel>

</ui:UiBinder>