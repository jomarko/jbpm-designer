<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui">


    <b:Form type="HORIZONTAL">
        <b:FieldSet>
            <b:FormLabel for="name" text="Name" showRequiredIndicator="true"/>
            <b:TextBox ui:field="name" />
            <b:HelpBlock ui:field="nameHelp" text="Please provide name of task" visible="false"/>
        </b:FieldSet>
        <b:FieldSet ui:field="participantWrapper">
            <b:FormLabel for="responsibleHuman" text="Responsible human" showRequiredIndicator="true"/>
            <b:ValueListBox ui:field="responsibleHuman"/>
            <b:FormLabel for="responsibleGroup" text="Responsible group" showRequiredIndicator="true"/>
            <b:ValueListBox ui:field="responsibleGroup" />
            <b:HelpBlock ui:field="participantHelp" text="Either human or group is mandatory for human task" visible="false"/>
        </b:FieldSet>
    </b:Form>

</ui:UiBinder>