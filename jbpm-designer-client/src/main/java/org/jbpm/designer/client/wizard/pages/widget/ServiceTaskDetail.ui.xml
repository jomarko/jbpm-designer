<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:util="urn:import:org.jbpm.designer.client.util">


    <b:Form type="HORIZONTAL" ui:field="serviceTaskDetailForm">
        <b:FieldSet>
            <b:FormLabel ui:field="nameLabel" for="name" text="Name" showRequiredIndicator="true"/>
            <util:DataIOEditorNameTextBox ui:field="name" />
            <b:HelpBlock ui:field="nameHelp" text="Please provide name of task" visible="false"/>
        </b:FieldSet>
        <b:FieldSet>
            <b:FormLabel for="endFlow" text="End Flow Here"/>
            <b:CheckBox ui:field="endFlow" />
            <b:HelpBlock text="Checking to true will cause that process flow will not continue after this place."/>
        </b:FieldSet>
        <b:FieldSet>
            <b:FormLabel ui:field="operationLabel" for="operation" text="Operation" showRequiredIndicator="true"/>
            <b:ValueListBox ui:field="operation" />
            <b:HelpBlock ui:field="operationHelp" text="Operation is mandatory for service task" visible="false"/>
        </b:FieldSet>
    </b:Form>

</ui:UiBinder>